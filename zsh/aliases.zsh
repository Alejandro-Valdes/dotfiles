alias reload!='. ~/.zshrc'
alias dns-flush="sudo killall -HUP mDNSResponder"

# Basic directory operations
alias pu='pushd'
alias po='popd'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -='cd -'
alias -- -2='cd -2'
alias -- -3='cd -3'

# List direcory contents
alias l='ls -lAh'
alias ll='ls -l'
alias la='ls -lA'
alias sl=ls # often screw this up
