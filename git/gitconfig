    d = diff
    a = add
    sh = show
    s = status
    ci = commit
    co = checkout
    l = log --date=local
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s    %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    c = diff --cached
    rb = pull --rebase
    svrb = svn rebase
    cp = cherry-pick
    b = branch
    time-machine = "!time-machine"
    tm = "!time-machine"

    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard

[color]
	ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
